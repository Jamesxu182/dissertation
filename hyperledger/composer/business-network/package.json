{
  "engines": {
    "composer": "^0.20.8"
  },
  "name": "business-network",
  "version": "0.0.55",
  "description": "business-network",
  "scripts": {
    "prepublish": "mkdirp ./dist && composer archive create --sourceType dir --sourceName . -a ./dist/$npm_package_name@$npm_package_version.bna",
    "install": "composer network install --card PeerAdmin@hlfv1 --archiveFile ./dist/$npm_package_name@$npm_package_version.bna",
    "upgrade": "composer network upgrade --card PeerAdmin@hlfv1 --networkName $npm_package_name --networkVersion $npm_package_version",
    "start": "composer network start --networkName $npm_package_name --networkVersion $npm_package_version --networkAdmin admin --networkAdminEnrollSecret adminpw --card PeerAdmin@hlfv1 --file networkadmin.card",
    "import": "composer card import --file networkadmin.card",
    "ping": "composer network ping --card admin@$npm_package_name",
    "pretest": "npm run lint",
    "lint": "eslint .",
    "test": "mocha -t 0 test/*.js",
    "deploy": "npm run prepublish && npm run install && npm run start && npm run import",
    "redeploy": "npm run prepublish && npm run install && npm run upgrade"
  },
  "keywords": [
    "composer",
    "composer-network"
  ],
  "author": "Yifan Xu",
  "email": "xuy7@tcd.ie",
  "license": "Apache-2.0",
  "devDependencies": {
    "composer-admin": "^0.20.8",
    "composer-cli": "^0.20.8",
    "composer-client": "^0.20.8",
    "composer-common": "^0.20.8",
    "composer-connector-embedded": "^0.20.8",
    "composer-cucumber-steps": "^0.20.8",
    "chai": "latest",
    "chai-as-promised": "latest",
    "cucumber": "^2.2.0",
    "eslint": "latest",
    "nyc": "latest",
    "mkdirp": "latest",
    "mocha": "latest"
  }
}
